{{>layouts/header}}
<form action="/hospitals" method="get"><!--메소드가 get이면 주소창뒤에 ?keyword=<> 로 넘어감-->
    {{#keyword}}
        지역: <input type="text" name="keyword" value="{{keyword}}"/>
    {{/keyword}}
    {{^keyword}}
        지역: <input type="text" name="keyword" />
    {{/keyword}}
    <input type="submit" />
</form>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">이름</th>
        <th scope="col">도로명 주소</th>
    </tr>
    </thead>
    <tbody>
    {{#hospitals}}
        <tr>
            <th scope="row">{{id}}</th>
            <td><a href="/hospitals/{{id}}">{{hospitalName}}</a></td>
            <td>{{roadNameAddress}}</td>
        </tr>
    {{/hospitals}}
    </tbody>
</table>
<!--페이징 기능 버튼 구현하기 list 메서드랑 연결-->
<ul class="pagination justify-content-center">
    {{#keyword}}
        <li class="page-item"><a class="page-link" href="?page={{previous}}&keyword={{keyword}}">Previous</a></li>
        <li class="page-item"><a class="page-link" href="?page={{next}}&keyword={{keyword}}">Next</a></li>
    {{/keyword}}
    {{^keyword}}
        <li class="page-item"><a class="page-link" href="?page={{previous}}">Previous</a></li>
        <li class="page-item"><a class="page-link" href="?page={{next}}">Next</a></li>
    {{/keyword}}
</ul>
<a href="/hospitals/new" class="btn btn-success">New Article</a>
{{>layouts/footer}}
