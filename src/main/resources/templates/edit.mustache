{{>layouts/header}}
<form class="container" action="/hospitals/{{hospitals.id}}/update" method="post">
    <div class="mb-3">
        <input type="hidden" name="id" value="{{hospitals.id}}"/>
        <label for="exampleFormControlInput1" class="form-label">이름</label>
        <input type="text" name="hospitalName" class="form-control" value="{{hospitals.hospitalName}}"
               id="exampleFormControlInput1" placeholder="병원이름을 입력하세요.">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">도로명 주소</label>
        <textarea class="form-control" name="roadNameAddress" id="exampleFormControlTextarea1" rows="3">{{hospitals.roadNameAddress}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/hospitals/new">New Hospital</a>
    <a href="/hospitals">Hospital List</a>
    <a href="/hospitals/{{id}}/delete">Delete</a>
</form>
{{>layouts/footer}}